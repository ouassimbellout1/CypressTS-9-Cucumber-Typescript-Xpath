{

    "compilerOptions": {
      "strict"         : true,
      "esModuleInterop": true,
      "noImplicitAny"  : false,
      "moduleResolution": "node",
      "module"         : "ES2022",
      "target"         : "es6",
      "lib"            : ["es6", "dom"],
      "types"          : ["cypress", "node", "cypress-xpath"],
      "typeRoots"      : ["node_modules/@types"]

    },
    
    "include"          : ["**/*.ts", "**/*.json", "cypress/support/index.ts", "cypress/plugins/index.ts"]
  }